/* pages/goods-apply-for/goods-apply-for.wxss */

.display {
  display: flex;
  align-items: center;
  justify-content: center;
}

.content {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: -1;
  margin: 0;
  padding: 0;
}

.info {
  font-size: 14px;
  color: rgb(28, 238, 109);
}

.header {
  width: 100%;
  background: white;
  height: 100px;
  margin-top: 5px;
}

.header-top {
  border-bottom: 1px solid rgb(231, 231, 236);
  display: flex;
  align-items: center;
  font-size: 14px;
  height: 50%;
}

.header-bottom {
  height: 50%;
}

.big-goods {
  width: 15%;
  height: 100%;
  font-size: 12px;
  padding-left: 10px;
  box-sizing: border-box;
}

.change-goods {
  width: 40%;
  height: 100%;
  font-size: 12px;
  color: rgb(214, 213, 213);
}

.change-goods image {
  width: 15px;
  height: 15px;
  margin-left: 15px;
}

.warehouse {
  width: 5%;
  height: 100%;
  font-size: 12px;
}

.change-warehouse {
  width: 40%;
  height: 100%;
  font-size: 12px;
  color: rgb(214, 213, 213);
}

.change-warehouse image {
  width: 15px;
  height: 15px;
  margin-left: 15px;
}

.header-bottom {
  display: flex;
  justify-content: space-between;
}

.tv_time {
  font-size: 12px;
  padding-left: 10px;
  box-sizing: border-box;
}

.time {
  font-size: 12px;
  color: rgb(214, 213, 213);
}

.go-img {
  font-size: 12px;
}

.go-img image {
  width: 15px;
  height: 15px;
}

.goods-info {
  width: 100%;
  height: 90px;
  background: white;
  margin-top: 10px;
}

.goods-info-top {
  width: 100%;
  height: 50%;
  border-bottom: 1px solid rgb(231, 231, 236);
}

.goods-info-bottom {
  width: 100%;
  height: 50%;
}

.tv-warehouse {
  height: 100%;
  width: 15%;
  font-size: 12px;
}

.in-warehouse {
  height: 100%;
  font-size: 12px;
  width: 35%;
}

.btn-add {
  width: 80px;
  height: 30px;
  font-size: 12px;
  color: rgb(192, 190, 190);
  float: left;
  margin-top: 10px;
  margin-left: 10px;
}

.position-flex {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 50px;
  width: 100%;
  background-color: rgb(190, 190, 190);
}

.position-flex button {
  width: 90px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  background: red;
  margin-right: 10px;
  color: white;
}

.position-bottom {
  height: 100%;
  display: flex;
  justify-content: space-between;
}

.filings {
  display: flex;
  align-items: center;
  height: 100%;
}
